<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WashingtonYandun_Hamburguesas.Views.BurgerItemPage"
             xmlns:models="clr-namespace:WashingtonYandun_Hamburguesas.Models"
             Title="BurgerItemPage">
    <ScrollView>
        <VerticalStackLayout
                Padding="20"
                Spacing="10"
                VerticalOptions="StartAndExpand">
            <Label
                Text="Nombre" />
            <Entry
                x:Name="name_wy"
                Text="{Binding Name}" />
            <Label
                Text="Descripción" />
            <Entry
                x:Name="desc_wy"
                Text="{Binding Description}" />
            <Label
                Text="¿Con queso extra?" />
            <CheckBox
                x:Name="check_wy"
                CheckedChanged="OnCheckBoxCheckedChanged" />
            <Button
                Text="Guardar"
                Clicked="OnSaveClicked" />
            <Button
                Text="Cancelar"
                Clicked="OnCancelClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>